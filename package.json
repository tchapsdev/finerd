{
    "name": "finerd",
    "homepage": "https://tchapsdev.github.io/finerd/", 
    "version": "1.0.0",
    "description": "personal finance pwa",
    "private": true,
    "scripts": {
        "dev": "next dev",
        "build": "next build",
        "start": "next start",
        "cover": "yarn cover:unit && yarn cover:report",
        "cover:report": "nyc --reporter lcov --reporter clover --reporter text --report-dir tests/coverage/all report",
        "cover:unit": "nyc --no-clean --reporter text yarn test",
        "format": "prettier --write 'pages/{,**/}*.ts' 'src/{,**/}*.ts'",
        "lint": "eslint \"**/*.{ts,tsx}\"",
        "lint:fix": "eslint --fix \"./{pages,src}/**/*.{ts,tsx}\"",
        "posttest": "yarn lint",
        "predeploy": "yarn run build",
        "deploy": "gh-pages -d build"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged && yarn cover"
        }
    },
    "lint-staged": {
        "*.ts": [
            "yarn format",
            "yarn lint:fix"
        ]
    },
    "dependencies": {
        "@emotion/react": "^11.8.2",
        "@emotion/styled": "^11.8.1",
        "@fontsource/roboto": "^4.5.3",
        "@mui/icons-material": "^5.5.0",
        "@mui/material": "^5.5.0",
        "apexcharts": "^3.26.1",
        "gh-pages": "^3.2.3",
        "next": "latest",
        "next-pwa": "^5.4.1",
        "react": "^17.0.2",
        "react-apexcharts": "^1.3.7",
        "react-dom": "^17.0.2",
        "react-scripts": "^5.0.0",
        "react-simple-wheel-picker": "^1.2.0",
        "sass": "^1.49.9",
        "styled-components": "^5.3.3"
    },
    "devDependencies": {
        "@types/chai": "^4.3.0",
        "@types/chai-spies": "^1.0.3",
        "@types/fs-extra": "^9.0.13",
        "@types/lodash": "^4.14.178",
        "@types/mocha": "^9.1.0",
        "@types/node": "^17.0.18",
        "@types/react": "17.0.38",
        "@types/react-dom": "^17.0.13",
        "@types/sinon": "^10.0.11",
        "@typescript-eslint/eslint-plugin": "^5.12.0",
        "@typescript-eslint/parser": "^5.12.0",
        "chai": "^4.3.6",
        "chai-spies": "^1.0.0",
        "eslint": "^8.9.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-import": "^2.25.4",
        "eslint-plugin-mocha": "^10.0.3",
        "eslint-plugin-prettier": "^4.0.0",
        "eslint-plugin-simple-import-sort": "^7.0.0",
        "husky": "^7.0.4",
        "lint-staged": "^12.3.4",
        "mocha": "^9.2.0",
        "nyc": "^15.1.0",
        "prettier": "^2.5.1",
        "sinon": "^13.0.1",
        "typescript": "4.5.4"
    },
    "engines": {
        "node": ">=14"
    }
}
